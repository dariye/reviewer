<% provide(:title, 'Course Reviewer') %>

<div class="row">
  <h1>Course Reviewer</h1>
  <div class="large-10 columns">
    <div class="container">
 <div class="search">
    <%= form_tag(courses_path, :method => "get", class: "form", id: "search-form") do %>
    <div class="input-append">
       <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Courses" %>
      <button class="button postfix" type="submit"><i class="icon-search"></i></button>
    </div>
    </div>
  <% end %>
  <%= yield %>
  <%= render 'shared/course_list' %>
</div>
  </div>
</div>
